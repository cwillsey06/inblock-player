:root
  --bg-color: white
  --fg-color: #fbf1c7
  --fg-shadow: #d5c4a1
  --btn-color: #fe8019
  --btn-shadow: #d65d0e

body
  display: flex
  justify-content: center
  align-items: center
  background-color: var(--bg-color)
  font-family: monospace
  user-select: none
  height: 100vh
  margin: 0

#wrapper
  display: grid
  grid-template-rows: 0.25fr 1fr
  grid-template-columns: repeat(2, 1fr)
  gap: 10px
  height: fit-content
  width: fit-content

.button
  display: block
  overflow: hidden
  box-sizing: border-box
  text-align: center
  color: var(--fg-color)
  background-color: var(--btn-color)
  box-shadow: 0px 4px 0px var(--btn-shadow), 0px 5px 6px rgba(0, 0, 0, 0.4)
  border-radius: 3px
  padding: 24px
  min-height: 64px
  min-width: 64px

.button:active
  transform: translateY(4px)
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.4) inset

.button.progress
  overflow: visible
  grid-column: 1 / 3
  min-height: 24px
  padding: 2px

.button.progress span
  display: block
  box-sizing: border-box
  font-size: 100%
  color: var(--btn-color)
  text-align: center
  background-color: var(--fg-color)
  box-shadow: 0px 4px 0px var(--fg-shadow) inset
  border-radius: 2px
  padding-top: 4px
  height: 100%
  width: 50%